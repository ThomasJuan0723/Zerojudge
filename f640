#include<iostream>
#include<string>
using namespace std;

int func(); // éè¿´å‰¯ç¨‹å¼

int main() {
    cout << func() << "\n";
    return 0;
}

int func() {
    // å®£å‘Šå‰ç½®è®Šæ•¸
    string token;
    int x, y, z;
    cin >> token;
    //token == "f"
    if (token == "f") {
        x = func();
        return 2 * x - 3;
    }
    //token == "g"
    if (token == "g") {
        x = func();
        y = func();
        return 2 * x + y - 7;
    }
    //token == "h"
    if (token == "h") {
        x = func();
        y = func();
        z = func();
        return 3 * x - 2 * y + z;
    }
    // token == ä»»æ„æ•¸å­—
    return stoi(token);
}
